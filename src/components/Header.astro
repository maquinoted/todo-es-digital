---
// src/components/Header.astro
---
<header class="header">
  <div class="container">
    <a href="/" class="logo-link">
      TODO ES DIGITAL
    </a>

    <button class="menu-toggle" aria-label="Abrir menú">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>

    <nav class="nav-menu">
      <ul>
        <li><a href="/oficinas-virtuales-guatemala">Oficinas Virtuales</a></li>
        <li><a href="/salas-reuniones-guatemala">Salas de Reuniones</a></li>
        <li><a href="/cowok-guatemala">Espacios para cowork</a></li>
        <li><a href="/pbx-virtual-guatemala">PBX para empresas</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    background-color: #424243;
    color: white;
    padding: 1.5rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 24px;
  }
  .logo-link {
    color: white; /* Letra blanca */
    text-decoration: none;
    font-weight: 700;
    font-size: 1.5rem;
    letter-spacing: 1px;
  }

  .nav-menu ul {
    display: flex;
    gap: 30px;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .nav-menu a {
    color: white;
    text-decoration: none;
    font-weight: 400;
    font-size: 0.95rem;
    transition: color 0.3s;
  }
  .nav-menu a:hover { color: #ccc; }

  .menu-toggle { display: none; flex-direction: column; gap: 5px; background: transparent; border: none; cursor: pointer; }
  .bar { width: 25px; height: 2px; background-color: white; }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      gap: 1.5rem;
    }
    .logo-link {
      order: 1;
      text-align: center; /* Centrado en móvil */
    }
    .menu-toggle {
      display: flex;
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
    }
    .nav-menu { 
      display: none; 
      width: 100%; 
      background: #424243; 
      padding: 1rem 0; 
      border-top: 1px solid #555;
      order: 3;
    }
    .nav-menu.is-active { display: block; }
    .nav-menu ul { flex-direction: column; align-items: center; gap: 15px; }
  }
</style>

<script>
  const menuToggle = document.querySelector('.menu-toggle');
  const navMenu = document.querySelector('.nav-menu');
  menuToggle?.addEventListener('click', () => {
    navMenu?.classList.toggle('is-active');
  });
</script>