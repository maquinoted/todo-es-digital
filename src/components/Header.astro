---
// src/components/Header.astro
---
<header class="header">
  <div class="container">
    <a href="/" class="logo">
      <img src="/todo-es-digital-oficinas-virtuales.png" alt="Todo es Digital | Oficinas Virtuales Guatemala" class="logo-img" />
    </a>

    <button class="menu-toggle" aria-label="Abrir menú">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>

    <nav class="nav-menu">
      <ul>
        <li><a href="/oficinas-virtuales">Oficinas Virtuales</a></li>
        <li><a href="/salas-reuniones">Salas de Reuniones</a></li>
        <li><a href="/cowork">Cowork</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    background-color: #424243;
    color: white;
    padding: 0.8rem 0; /* Ajustado para que el logo luzca mejor */
    position: sticky;
    top: 0;
    z-index: 100;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 24px;
  }
  .logo-img {
    height: 50px; /* Ajusta esta altura según cómo quieras que se vea */
    width: auto;
    display: block;
  }
  .nav-menu ul {
    display: flex;
    gap: 30px;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .nav-menu a {
    color: white;
    text-decoration: none;
    font-weight: 400;
    font-size: 0.95rem;
  }

  /* Responsive */
  .menu-toggle { display: none; flex-direction: column; gap: 5px; background: transparent; border: none; cursor: pointer; }
  .bar { width: 25px; height: 2px; background-color: white; }

  @media (max-width: 768px) {
    .menu-toggle { display: flex; }
    .nav-menu { 
      display: none; 
      position: absolute; 
      top: 100%; 
      left: 0; 
      width: 100%; 
      background: #424243; 
      padding: 1.5rem 0; 
      border-top: 1px solid #555; 
    }
    .nav-menu.is-active { display: block; }
    .nav-menu ul { flex-direction: column; align-items: center; gap: 20px; }
  }
</style>

<script>
  const menuToggle = document.querySelector('.menu-toggle');
  const navMenu = document.querySelector('.nav-menu');
  menuToggle?.addEventListener('click', () => {
    navMenu?.classList.toggle('is-active');
  });
</script>