---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title = "Todo es Digital" } = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Todo es Digital</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  html, body {
    /* Si el usuario tiene Roboto instalada, la usa. Si no, usa la del sistema. */
    font-family: 'Roboto', -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif !important;
    margin: 0;
    padding: 0;
    -webkit-font-smoothing: antialiased; /* Para que se vea más nítida */
  }
</style>