---
import MainLayout from '../layouts/MainLayout.astro';
const currentCanonicalURL = "https://todo-es-digital.vercel.app/oficinas-virtuales-guatemala";
---

<MainLayout 
  title="Oficinas Virtuales en Guatemala | Zona Pradera"
  description="Domicilio fiscal y comercial en Zona Pradera. Planes desde Q375 con PBX y sala de reuniones."
  canonicalURL={currentCanonicalURL}
>
  <section class="page-header">
    <div class="container">
      <h1>Oficinas Virtuales en Guatemala</h1>
      <p class="subtitle">Prestigio inmediato para su empresa en el centro de negocios más exclusivo.</p>
    </div>
  </section>

  <section class="pricing-section">
    <div class="container">
      <div class="grid-cards">
        
        <div class="card">
          <h3>Plan Básico</h3>
          <div class="price">Q375<span>/mes</span></div>
          <ul>
            <li>Dirección Fiscal Zona Pradera</li>
            <li>Manejo de Correspondencia</li>
            <li>PBX con IVR Profesional</li>
            <li>8 horas de Sala de Reuniones</li>
          </ul>
          <a href="https://wa.me/50223022200" class="btn">Solicitar Información</a>
        </div>

        <div class="card featured">
          <div class="badge">RECOMENDADO</div>
          <h3>Plan EOffice</h3>
          <div class="price">Q575<span>/mes</span></div>
          <ul>
            <li>Dirección Fiscal Zona Pradera</li>
            <li>PBX + WhatsApp Business</li>
            <li>Recepcionista Profesional</li>
            <li>25 horas de Sala de Reuniones</li>
          </ul>
          <a href="https://wa.me/50223022200" class="btn btn-dark">Elegir Plan</a>
        </div>

        <div class="card">
          <h3>Plan Premium</h3>
          <div class="price">Q750<span>/mes</span></div>
          <ul>
            <li>Dirección Fiscal Zona Pradera</li>
            <li>Atención Personalizada</li>
            <li>40 horas de Sala de Reuniones</li>
            <li>250 min. Llamadas Salientes</li>
          </ul>
          <a href="https://wa.me/50223022200" class="btn">Solicitar Información</a>
        </div>

      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Diseño de la cabecera de página */
  .page-header {
    padding: 60px 0;
    text-align: center;
    background: #f9f9f9;
  }
  .page-header h1 { font-size: 2.5rem; margin-bottom: 10px; color: #1a1a1a; }
  .subtitle { font-size: 1.2rem; color: #666; }

  /* Grid de Tarjetas */
  .pricing-section { padding: 80px 0; }
  
  .grid-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    align-items: start;
  }

  /* Estilo de la Card */
  .card {
    background: white;
    padding: 40px 30px;
    border-radius: 15px;
    border: 1px solid #e0e0e0;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
  }

  .card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
  }

  .card.featured {
    border: 2px solid #1a1a1a;
    transform: scale(1.05);
  }

  .badge {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: #1a1a1a;
    color: white;
    padding: 5px 15px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: bold;
  }

  .price {
    font-size: 2.5rem;
    font-weight: bold;
    margin: 20px 0;
    color: #1a1a1a;
  }
  .price span { font-size: 1rem; color: #888; }

  ul {
    list-style: none;
    padding: 0;
    margin: 30px 0;
    text-align: left;
  }
  
  li {
    margin-bottom: 12px;
    color: #555;
    display: flex;
    align-items: center;
  }

  li::before {
    content: "✓";
    color: #25d366;
    margin-right: 10px;
    font-weight: bold;
  }

  .btn {
    display: block;
    padding: 15px;
    background: #f0f0f0;
    color: #1a1a1a;
    text-decoration: none;
    border-radius: 8px;
    font-weight: bold;
    transition: 0.3s;
  }

  .btn-dark {
    background: #1a1a1a;
    color: white;
  }

  .btn:hover {
    filter: brightness(0.9);
  }

  @media (max-width: 768px) {
    .card.featured { transform: scale(1); }
  }
</style>