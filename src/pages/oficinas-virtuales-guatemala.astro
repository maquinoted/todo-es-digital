  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "¿Puedo registrar mi empresa en la SAT con su dirección fiscal?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Sí, nuestros planes incluyen el derecho de uso de dirección fiscal en Zona Pradera para trámites de facturación ante la SAT en Guatemala."
        }
      }
    ]
  }
  </script>
</MainLayout>

<style>
  .container { max-width: 1150px; margin: 0 auto; padding: 0 20px; }
  .text-center { text-align: center; }
  
  /* Hero */
  .hero-clean { padding: 50px 0; text-align: center; background: #fff; }
  .hero-clean h1 { font-size: 2.3rem; color: #1a1a1a; margin-bottom: 10px; }
  .lead { font-size: 1.1rem; color: #666; max-width: 800px; margin: 0 auto; }

  /* Intro con Imagen */
  .story-comparison { padding: 40px 0; }
  .grid-intro { display: grid; grid-template-columns: 1.2fr 1fr; gap: 50px; align-items: center; }
  .img-square { width: 100%; aspect-ratio: 1/1; object-fit: cover; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); }
  .case-study { background: #f9f9f9; padding: 20px; border-left: 4px solid #1a1a1a; margin-top: 20px; }

  /* Grid de Planes */
  .pricing-expert { padding: 60px 0; background: #fcfcfc; }
  .grid-3 { display: grid; grid-template-columns: repeat(3, 1fr); gap: 25px; margin-bottom: 25px; }
  .grid-2-centered { display: grid; grid-template-columns: repeat(2, 1fr); gap: 25px; max-width: 750px; margin: 0 auto; }

  /* Estilo Card Profesional */
  .card {
    background: white; padding: 30px 25px; border-radius: 15px; border: 1px solid #eee;
    text-align: center; display: flex; flex-direction: column; transition: 0.3s;
  }
  .card:hover { transform: translateY(-5px); box-shadow: 0 15px 35px rgba(0,0,0,0.1); }
  .card.featured { border: 2px solid #1a1a1a; position: relative; }
  .badge { position: absolute; top: -14px; left: 50%; transform: translateX(-50%); background: #1a1a1a; color: #fff; padding: 4px 15px; border-radius: 20px; font-size: 0.75rem; font-weight: bold; }

  .price { font-size: 2.1rem; font-weight: 800; color: #1a1a1a; margin: 15px 0; }
  .price span { font-size: 0.9rem; color: #888; font-weight: 400; }
  .plan-desc { font-size: 0.85rem; color: #777; margin-bottom: 15px; height: 40px; }

  ul { list-style: none; padding: 0; margin-bottom: 25px; text-align: left; flex-grow: 1; }
  li { font-size: 0.88rem; color: #444; margin-bottom: 10px; display: flex; align-items: flex-start; }
  li::before { content: "✓"; color: #25d366; font-weight: bold; margin-right: 10px; }

  .btn { background: #f4f4f4; color: #1a1a1a; padding: 12px; border-radius: 8px; text-decoration: none; font-weight: bold; font-size: 0.9rem; transition: 0.3s; }
  .btn-dark { background: #1a1a1a; color: #fff; }
  .btn:hover { filter: brightness(0.9); }

  @media (max-width: 950px) {
    .grid-intro, .grid-3, .grid-2-centered { grid-template-columns: 1fr; max-width: 100%; }
  }
</style>